<div class="tile is-ancestor">
  <div class="tile is-parent">
    <div class="tile is-child is-2">
      <%= render partial: 'shared/menu', :locals => {:selected_menu_item => "Admin Page", :admin_user => @is_admin} %>
    </div>

    <div class="tile is-child is-8">
      <div class="section">
        <div class="content">
          <h1 class="title">
            Edit profile of <%= @user.username %>
          </h1>

          <%= form_for :user, url: update_user_path, method: :post do |form| %>
            <%= form.hidden_field :uuid %>
            <div class="field">
              <%= form.label :email, class: "label"  %>
              <%= form.email_field :email, class: "input", required: true %>
            </div>

            <div class="field">
              <%= form.label :date_of_birth, class: "label"  %>
              <%= form.date_field :date_of_birth, class: "input", required: true, max: Date.today %>
            </div>

            <div class="actions">
              <%= form.submit :Save, class: "button is-link disabled", id: "submitBtn"%>
            </div>
          <% end %>

        </div>
      </div>
    </div>

    <div class="tile is-child is-2"></div>
  </div>
</div>
