
<%= form_for :user, url: create_user_path, method: :post do |form| %>

  <div class="field">
    <%= form.label :username, class: "label" %>
    <%= form.text_field :username, class: "input", required: true %>
  </div>

  <div class="field">
    <%= form.label :email, class: "label"  %>
    <%= form.email_field :email, class: "input", required: true %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth, class: "label"  %>
    <%= form.date_field :date_of_birth, class: "input", required: true, max: Date.today %>
  </div>

  <div class="field">
    <%= form.label :password, class: "label"  %>
    <%= form.password_field :password, class: "input", required: true, id: "password" %>
  </div>

  <div class="field">
    <%= form.label :password, class: "label"  %>
    <%= form.password_field :password_confirm, class: "input", required: true%>
    <span id='message'></span>
  </div>

  <div class="actions">
    <%= form.submit :Submit, class: "button is-link disabled", id: "submitBtn"%>
  </div>
<% end %>
