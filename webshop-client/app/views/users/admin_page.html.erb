<div class="tile is-ancestor">
  <div class="tile is-parent">
    <div class="tile is-child is-2">
      <%= render partial: 'shared/menu', :locals => {:selected_menu_item => "Admin Page", :admin_user => @is_admin} %>
    </div>

    <div class="tile is-child is-8">
      <div class="section">
        <div class="content">
          <h1 class="title">
            Admin page
          </h1>

          <table class="table">
            <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Date of birth</th>
              <th>Action</th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user_hash| %>
              <% user = SwaggerClient::UserResult.build_from_hash user_hash %>
              <tr>
                <th><%= user.username %></th>
                <th><%= user.email %></th>
                <th><%= user.date_of_birth %></th>
                <th><%= link_to "Edit", edit_user_path(:selected_user => user_hash) %>/<%= link_to "Delete", delete_user_path(:uuid => user.uuid), data: {:confirm => 'Are you sure?'}, :method => :delete%></th>
              </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>

    <div class="tile is-child is-2"></div>
  </div>
</div>
